/*About styles*/

.profile-wrapper {
    padding-top: 7em;
    margin-left: auto;
    margin-right: auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 7em;
    padding-bottom: 7em;
}

a {
    text-decoration: none;
    color: rgb(172, 169, 169);
    transition: color 1s;
}

a:hover {
    color: #000;
    background: #fff;
    transition: color 1s;
}

/* Creating the content boxes */
.contentbox {
    height: 100%;
    text-align: left;
    color: rgb(139, 119, 119);
    background-color: rgb(255, 239, 195);
    margin: auto;
    height: 300px;
    width: 800px;
    padding-left: 20px;
    padding-right: 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
}

.contentbox > div > h1 {
    font-weight: 200;
    text-decoration: underline 3px white;
}

.contentbox > div {
    margin: 0;
    padding: 0;
    height: 100%;
    padding-left: 10px;
}

/* Overlay for images */
.overlay {
    position: absolute;
    bottom: 11px;
    background: rgb(0, 0, 0);
    background: rgba(0, 0, 0, 0.5); /* Black see-through */
    color: #f1f1f1;
    width: 36.7%;
    transition: .5s ease;
    opacity:0;
    color: white;
    font-size: 20px;
    padding: 20px;
    padding-bottom: 10px;
    text-align: center;
}

.box1-pic {
    justify-content: center;
    margin-top: 5%;
    width: 90%;
}

.box2-pic {
    justify-content: center;
    margin-top: 5%;
    width: 90%;
    height: 90%;
}

.right {
    height: 100%;
    border-left: 3px solid white;
}

/* Triggering the overlay */
.right:hover .overlay {
    opacity: 1;
}

.left {
    height: 100%;
    border-right: 3px solid white;
}

/* Triggering the overlay */
.left:hover .overlay {
    opacity: 1;
}

.profile-left-side > div {
    position: relative;
    right: 12%;
    /*margin-left: 5em;*/
    border-right: 14px solid rgb(206, 166, 55);
    border-bottom: 10px solid rgb(206, 166, 55);
}

.profile-right-side > div {
    position: relative;
    left: 12%;
    /*margin-right: 5em;*/
    border-right: 14px solid rgb(206, 166, 55);
    border-bottom: 10px solid rgb(206, 166, 55);
}

.about-profile-picture {
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10%;
    max-width: 200px;
}

.about-picture-gallery {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    margin-top: 6cm;
    margin-bottom: 10%;
    border-top: 1px solid white;
    border-bottom: 1px solid white;
}

