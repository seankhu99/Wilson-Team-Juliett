/*Portfolio Styles*/
.portfolio-background-img {
    max-width: 100%;
    max-height: 350px;
    min-height: 350px;
    background-size: cover;
    background-repeat: none;
    background-position: center;
}

.portfolio-item {
    position: relative;
    transition: all .2s ease-in-out;
}

.portfolio-collection-wrapper {
    margin: 5%;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 2%;
    row-gap: 5%;
}

.projects-header {
    text-align: center;
    font-weight: 200px;
    padding-top: 2%;
    padding-bottom: 2%;
    text-decoration: none;
}

.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}

/* Overlay for images */
.img-overlay {
    position: absolute;
    top: 0%;
    bottom: 0%;
    background: rgb(0, 0, 0);
    background: rgba(0, 0, 0, 0.5); 
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #f1f1f1;
    width: 100%;
    height: 350px;
    transition: .5s ease;
    opacity:0;
    color: white;
    font-size: 20px;
    text-align: center;
    justify-content: center;
}


.portfolio-item:hover .img-overlay{
    opacity: 1;
}

.portfolio-item:hover  {
    transform: scale(1.1);
}

a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.5);
    transition: color 1s;
}

